<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#9284AA">
    <TextView
            android:layout_width="0dp"
            android:layout_height="650dp" android:id="@+id/tvLetra"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:gravity="center"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/btTraduzir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#311A5A"
        android:text="Tradução"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLetra"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>